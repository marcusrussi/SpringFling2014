block map
  img(src="images/map.png" style="border-radius: 3px;")

block lineup
  .panel.pure-g-r
    for val in studentBands
      .pure-u-1-3 #{val.name}
    for val in artists
      .pure-u-1 name: #{val.name}, type: #{val.type}

